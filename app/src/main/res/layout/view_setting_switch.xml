<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="switchItem"
            type="com.github.ojh102.timary.ui.legacy.main.setting.SettingItems.SwitchItem"/>

        <variable
            name="onCheckedChangedListener"
            type="android.widget.CompoundButton.OnCheckedChangeListener"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{switchItem.title}"
            android:textAppearance="@style/N16SettingBlack"
            app:layout_constraintBottom_toTopOf="@+id/tv_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="타임캡슐 꺼냄 알림"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@{switchItem.description}"
            android:textAppearance="@style/N14SettingGery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:text="기억을 꺼내는 시점에서 알림"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:checked="@{switchItem.isChecked}"
            android:onCheckedChanged="@{onCheckedChangedListener}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:switchMinWidth="48dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

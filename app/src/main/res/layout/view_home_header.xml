<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable
      name="headerItem"
      type="com.github.ojh102.timary.ui.main.home.HomeHeaderItem"/>

    <variable
      name="timaryParser"
      type="com.github.ojh102.timary.util.TimaryParser"/>
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_header"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:lineSpacingMultiplier="1.2"
      android:text="@{timaryParser.getHeaderText(headerItem.num)}"
      android:textAppearance="@style/N16Grape"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <View
      android:layout_width="0dp"
      android:layout_height="0.5dp"
      android:background="@color/linePurple"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
